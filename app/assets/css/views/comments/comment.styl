.replies .commentItem
  margin-top 30px
.commentItem + .commentItem
  margin-top 0px

article.commentItem
  display block
  margin 0 -20px
  padding 10px 20px
  position relative
  &.deleted
    background-color rgba(0, 0, 0, 0.05)
    .textHtml
      text-decoration line-through
  
  .controls
    display inline-block
    vertical-align middle
    // position absolute
    // right 20px
    // top 10px
  .textHtml
    font-size mediumFontSize
    line-height 1.6em
    //background yellow
    overflow hidden
    p
      line-height 1.6em
    h1, h2, h3, h4, h5, h6
      line-height 1.2em
    
    p, h1, h2, h3, h4, h5, h6
      
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0
    blockquote
      color #666
      margin 0
      padding 0
      padding-left 14px
      font-style italic
      position relative
      &:before
        content '>'
        position absolute
        left 0
        top 0
    
    .embeded-link-title
      a
        display inline
        vertical-align middle
        margin-right 5px
        &:hover
          color blueColor
      &:after
        content ''
        background: url('/images/new-tab.svg')
        width 16px
        height 16px
        display inline-block
        vertical-align middle
        
      
  .meta
    font-size smallFontSize - 1
    line-height 30px
    margin-top 5px
    
    .repliesCount,
    .reply,
    .creator,
    .createdAt,
    .permalink,
    .parentId
      display inline-block
      margin-right 20px
      
    .repliesCount,
    .creator,
    .createdAt,
    .permalink,
    .parentId
      color darkGreyColor
    .creator.admin
      color: #ff1493
    .reply
      font-weight bold
  .replies
    margin-left 20px            

.commentItem.commentRoot      
  > .replies
    margin-left 0px