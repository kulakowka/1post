greyColor = #ddd
blackColor = #111
blueColor = deepskyblue
smallFontSize = 13px
mediumFontSize = 15px

* 
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  font-family helvetica


body
  line-height 1
  margin 0
  padding 0


html
  box-sizing border-box


*, 
*:before, 
*:after
  box-sizing inherit

a
  color blueColor

table
  border-collapse collapse 
  tr
    td,
    th
      padding 10px
      border 1px solid greyColor
     

.btn
  border 0
  padding 5px 10px
  background-color greyColor
  color blackColor
  font-size mediumFontSize
.btn-submit
  color white
  font-weight bold
  background-color blueColor
      

form
  .field + .field
    margin-top 20px
  .field
    .field-label
      display inline-block
      font-size smallFontSize
      color blackColor
    .field-label + .field-input
      margin-top 5px
    .field-input
      border 1px solid greyColor
      font-size smallFontSize
      display block
      padding 5px
      

.layout
  background ghostwhite
  max-width 800px
  margin auto
  padding 20px



