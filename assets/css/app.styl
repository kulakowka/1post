greyColor = #ddd
blackColor = #111
blueColor = deepskyblue
smallFontSize = 13px
mediumFontSize = 15px

* 
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility

body
  margin 0
  padding 0
  font-family "Helvetica Neue", Helvetica, "Segoe UI", Arial, freesans, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"

html
  box-sizing border-box


*, 
*:before, 
*:after
  box-sizing inherit
  


a
  color blueColor

table
  border-collapse collapse 
  tr
    td,
    th
      padding 10px
      border 1px solid greyColor
     

.btn
  border 0
  padding 5px 10px
  background-color greyColor
  color blackColor
  font-size mediumFontSize
  &:focus 
    outline-style solid
    outline-width 2px
.btn-submit
  color white
  font-weight bold
  background-color blueColor
      

form
  .field + .field
    margin-top 20px
  .field
    .field-label
      display inline-block
      font-size smallFontSize
      color blackColor
    .field-label + .field-input
      margin-top 5px
    .field-input
      border 1px solid greyColor
      font-size smallFontSize
      display block
      padding 5px
      

.layout
  // background ghostwhite
  max-width 800px
  margin auto
  padding 20px

.replies .commentForm
  margin-top 20px
.commentForm
  textarea
    width 100%
    //min-height 1.6em
    font-size 16px
    line-height 1.6em
    padding 5px
    margin 0
    display block
    background transparent
    border 1px solid #ddd
    resize none
 
  textarea:focus 
    outline-style solid
    outline-width 2px


.replies .commentItem
  margin-top 20px
.commentItem + .commentItem
  margin-top 20px
.commentItem
  .textHtml
    font-size 16px
    line-height 1.6em
    //background yellow
    p, h1, h2, h3, h4, h5, h6
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0
    
  .meta
    font-size smallFontSize
    color #aaa
    .repliesCount,
    .creator,
    .createdAt,
    .permalink,
    .parentId
      margin-right 20px
  .replies
    margin-left 20px            

code
  background: rgba(0,0,0,0.03)
  border: 0px solid rgba(0,0,0,0.14)
  font-size: 13px
  line-height: 1.4em
  padding: 0.1em 0.4em
  border-radius: 5px
  color: #333333
  font-family Consolas, "Liberation Mono", Menlo, Courier, monospace !important

pre
  background: rgba(0,0,0,0.03)
  border: 0px solid rgba(0,0,0,0.0)
  padding: 0.4em 
  border-radius: 5px

pre code
  border: 0
  background: transparent
  padding: inherit
  border-radius: 0
  display: block
  overflow-x: auto

