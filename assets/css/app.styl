greyColor = #ddd
blackColor = #111
blueColor = deepskyblue
smallFontSize = 13px
mediumFontSize = 14px
defaultFont = "Helvetica Neue", Helvetica, "Segoe UI", Arial, freesans, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"
* 
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility

body
  margin 0
  padding 0
  font-family defaultFont

html
  box-sizing border-box

img 
  max-width 100%

*, 
*:before, 
*:after
  box-sizing inherit

input,
textarea,
button
  -webkit-appearance none
  -moz-appearance none
  appearance none
  border-radius 0
  font-family defaultFont
  
.hidden
  display none

a
  color blueColor
  text-decoration none
  &:hover
    text-decoration underline

.siteHeader
  background-color blueColor
  margin 0 -10px 20px
  overflow hidden
  @media all and (min-width: 800px)
    margin 0 -20px 20px
  .logo
    a
      font-size 20px
      line-height 40px
      display inline-block
      padding 0 10px
      color white
    a:hover
      text-decoration none
  ul.rightMenu
    float right
    margin 0
    padding 0
    li + li
      @media all and (min-width: 800px)
        margin-left 20px
    li
      margin 0
      padding 0
      display inline-block
      a
        display inline-block
        line-height 40px
        font-size 13px
        padding 0 10px
        color white
        
table
  border-collapse collapse 
  tr
    td,
    th
      padding 10px
      border 1px solid greyColor
     

.btn
  border 0
  padding 5px 10px
  background-color greyColor
  color blackColor
  font-size mediumFontSize
  &:focus 
    outline-style solid
    outline-width 2px
.btn-submit
  color white
  font-weight bold
  background-color blueColor
      

form
  .field + .field
    margin-top 20px
  .field
    .field-label
      display inline-block
      font-size smallFontSize
      color blackColor
    .field-label + .field-input
      margin-top 5px
    .field-input
      border 1px solid greyColor
      font-size mediumFontSize
      display block
      padding 5px
      
body 
  background ghostwhite
.layout
  background white //rgba(246, 246, 239, 0.5) //ghostwhite
  max-width 800px
  margin 0 auto
  padding 0 10px 20px
  @media all and (min-width: 800px)
    padding 0 20px 20px

.commentForm
  .field
    position relative
  textarea
    width 100%
    //min-height 1.6em
    font-size mediumFontSize
    line-height 1.6em
    padding 5px
    margin 0
    display block
    background transparent
    border 1px solid #ddd
    resize none
    border-radius 0
  
 
  textarea:focus 
    outline 2px solid blueColor

.replies .commentForm
  margin-top 30px
.replies .commentItem
  margin-top 30px
.commentItem + .commentItem
  margin-top 30px

.commentItem
  .textHtml
    font-size mediumFontSize
    line-height 1.6em
    //background yellow
    p
      line-height 1.6em
    h1, h2, h3, h4, h5, h6
      line-height 1.2em
    
    p, h1, h2, h3, h4, h5, h6
      
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0
    blockquote
      color #666
      margin 0
      padding 0
      padding-left 14px
      font-style italic
      position relative
      &:before
        content '>'
        position absolute
        left 0
        top 0
      

    
    
  .meta
    font-size smallFontSize - 1
    margin-top 10px
    .repliesCount,
    .reply,
    .creator,
    .createdAt,
    .permalink,
    .parentId
      margin-right 20px
    .repliesCount,
    .creator,
    .createdAt,
    .permalink,
    .parentId
      color #aaa
    .reply
      font-weight bold
  .replies
    margin-left 20px            

.commentItem.commentRoot      
  > .replies
    margin-left 0px
      
code
  background: rgba(0,0,0,0.03)
  border: 0px solid rgba(0,0,0,0.14)
  font-size: mediumFontSize - 1
  line-height: 1.4em
  padding: 0.1em 0.4em
  border-radius: 5px
  color: #333333
  font-family Consolas, "Liberation Mono", Menlo, Courier, monospace !important

pre
  background: rgba(0,0,0,0.03)
  border: 0px solid rgba(0,0,0,0.0)
  padding: 0.4em 
  border-radius: 5px

pre code
  border: 0
  background: transparent
  padding: inherit
  border-radius: 0
  display: block
  overflow-x: auto

